<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 形状的填充色 -->
    <solid
        android:color="#00FFFFFF" />

    <!-- 边框宽度和颜色 -->
    <stroke
        android:width="0.01dp"
        android:color="#000000"
        />
    <!-- 圆角，你也可以对不同的角设置不同的数值 -->
    <corners android:radius="5.0dp" />

    <padding
        android:left="0.5dp"
        android:top="0dp"
        android:right="0.5dp"
        android:bottom="1dp" />
</shape>