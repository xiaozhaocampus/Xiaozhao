<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="@dimen/campus_info_list_height">

    <RelativeLayout
        android:id="@+id/info_list_first"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/campus_info_list_margin_top"
        android:layout_marginBottom="@dimen/campus_info_list_margin_top"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/info_list_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:maxEms="10"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_marginLeft="@dimen/campus_info_list_margin_left"
            android:textSize="@dimen/campus_info_list_title_size"
            android:textColor="@color/campus_info_list_title_color"/>

        <TextView
            android:id="@+id/info_list_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/campus_info_list_margin_left"
            android:textSize="@dimen/campus_info_list_date_size"
            android:textColor="@color/campus_info_list_title_color"/>
    </RelativeLayout>

    <ImageView
        android:id="@+id/info_list_location"
        android:layout_below="@id/info_list_first"
        android:layout_marginLeft="@dimen/campus_info_list_margin_left"
        android:layout_width="@dimen/campus_info_list_location_size"
        android:layout_height="@dimen/campus_info_list_location_size"/>

    <TextView
        android:id="@+id/info_list_address"
        android:layout_below="@id/info_list_first"
        android:layout_toRightOf="@id/info_list_location"
        android:layout_marginLeft="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/campus_info_list_address_size"
        android:textColor="@color/campus_info_list_gray_color"/>

    <ImageView
        android:id="@+id/info_list_is_save"
        android:layout_below="@id/info_list_first"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_width="@dimen/campus_info_list_is_save_size"
        android:layout_height="@dimen/campus_info_list_is_save_size"
        android:src="@drawable/fragment_info_alarm"/>
</RelativeLayout>