<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:minHeight="@dimen/campus_info_list_height">

    <TextView
        android:id="@+id/info_list_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="@dimen/campus_info_list_margin_top"
        android:layout_marginLeft="@dimen/campus_info_list_margin_left"
        android:maxEms="10"
        android:singleLine="true"
        android:ellipsize="end"
        android:textSize="@dimen/campus_info_list_title_size"
        android:textColor="@color/campus_info_list_title_color"
        android:text="武汉天喻集团校园招聘会" />
    
    <ImageView
        android:id="@+id/info_list_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/info_list_title"
        android:layout_alignLeft="@id/info_list_title"
        android:layout_marginTop="6dp"
        android:src="@drawable/location_unread"
        android:contentDescription="@null" />
    
    <TextView
        android:id="@+id/info_list_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/info_list_title"
        android:layout_toRightOf="@id/info_list_location"
        android:layout_marginLeft="2dp"
        android:layout_alignTop="@id/info_list_location"
        android:textSize="@dimen/campus_info_list_address_size"
        android:textColor="@color/campus_info_list_gray_color"
        android:text="华中科技大学大学生活动中心" />

    <TextView
        android:id="@+id/info_list_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/campus_info_list_margin_top"
        android:layout_marginRight="13dp"
        android:textSize="@dimen/campus_info_list_date_size"
        android:textColor="@color/campus_info_list_title_color"
        android:text="6月27日" />

    <ImageView
        android:id="@+id/info_list_is_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:src="@drawable/fragment_info_alarm"
        android:contentDescription="@null" />
</RelativeLayout>