<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.campus.xiaozhao"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="18"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>
    <uses-permission android:name="android.permission.WAKE_LOCK"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <!-- 百度地图定位的APP_KEY -->
        <meta-data android:name="com.baidu.lbsapi.API_KEY" android:value="73HoeMOMZroObeGc5ZBWranv" />

        <activity
            android:name="com.campus.xiaozhao.activity.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.campus.xiaozhao.activity.SetupActivity"
            android:label="@string/title_activity_setup"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.campus.xiaozhao.activity.LoginActivity"
            android:label="@string/title_activity_login"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.campus.xiaozhao.activity.RegisterActivity"
            android:label="@string/title_activity_register"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.campus.xiaozhao.activity.FeedbackActivity"
            android:label="@string/title_activity_feedback"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.campus.xiaozhao.activity.AlarmActivity"
            android:label="@string/title_activity_feedback"
            android:screenOrientation="portrait" >
        </activity>
        <activity android:name="com.campus.xiaozhao.activity.CampusDetailActivity" />
        <activity
            android:name="com.campus.xiaozhao.activity.VerifyNumberActivity"
            android:label="@string/title_activity_verify_number" >
        </activity>
        <activity
            android:name="com.campus.xiaozhao.activity.ResetPasswordActivity"
            android:label="@string/title_activity_reset_password" >
        </activity>

        <receiver android:name=".basic.alarm.CampusAlarmReceiver"></receiver>

        <receiver
            android:name=".basic.alarm.CampusBootReceiver"
            android:enabled="false">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED"></action>
            </intent-filter>
        </receiver>
    </application>

</manifest>